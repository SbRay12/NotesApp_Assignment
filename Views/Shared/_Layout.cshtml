<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NotesApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .priority-low { background-color: #d1e7dd; color: #0f5132; padding: .25rem .5rem; border-radius: .25rem; }
        .priority-medium { background-color: #fff3cd; color: #664d03; padding: .25rem .5rem; border-radius: .25rem; }
        .priority-high { background-color: #f8d7da; color: #842029; padding: .25rem .5rem; border-radius: .25rem; }

        .note-card { white-space: pre-wrap; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">NotesApp</a>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/notes.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
